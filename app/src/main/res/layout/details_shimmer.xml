<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReadEditorial">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/image"
        android:layout_marginEnd="10dp"
        android:background="@android:color/darker_gray"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:layout_marginTop="10dp"
        android:id="@+id/text_title"
        android:background="@android:color/darker_gray"
        android:text="End Of Proxies In Company Ownership In Kenya"
        android:textSize="25sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:tint="@android:color/darker_gray"
            android:src="@drawable/ic_baseline_person_24"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posted on March 3,2022"
                android:textStyle="bold"
                android:id="@+id/date"
                android:background="@android:color/darker_gray"
                android:textColor="@android:color/darker_gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="By iGrandBP"
                android:id="@+id/author"
                android:background="@android:color/darker_gray"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:text="In Law Review"
                android:id="@+id/category"
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/content"
        android:layout_marginEnd="20dp"
        android:text="The content goes here\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\\n\n\"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/darker_gray"
        android:textSize="15sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>